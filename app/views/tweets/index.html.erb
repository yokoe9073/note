<div class="contents row">
  <% @tweets.each do |tweet| %>
  <div class="content_post">
    <div class="more">
        <span><%= image_tag 'arrow_top.png' %></span>
        <ul class="more_list">
          <li>
            <%= link_to '削除', tweet_path(tweet.id), method: :delete %>
          </li>
        </ul>
    </div> 
    <p><%= tweet.text %></p>
  </div>
  <% end %>
</div>